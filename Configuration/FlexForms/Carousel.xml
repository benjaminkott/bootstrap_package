<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:bootstrap_package/Resources/Private/Language/Backend.xlf:settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <interval>
                        <TCEforms>
                            <label>LLL:EXT:bootstrap_package/Resources/Private/Language/Backend.xlf:carousel.interval
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>5000</default>
                                <eval>required,int</eval>
                            </config>
                        </TCEforms>
                    </interval>
                    <height_mode>
                      <TCEforms type="array">
                        <label>Height mode</label>
                        <config type="array">
                          <type>select</type>
                          <items type="array">
                            <numIndex index="0" type="array"><numIndex index="0">Fluid</numIndex><numIndex index="1">0</numIndex></numIndex>
                            <numIndex index="1" type="array"><numIndex index="0">Fixed</numIndex><numIndex index="1">1</numIndex></numIndex>
                          </items>
                          <default>0</default>
                        </config>
                        <onChange>reload</onChange>
                      </TCEforms>
                    </height_mode>
                    <ratio>
                        <TCEforms>
                           <displayCond>FIELD:height_mode:=:0</displayCond>
                            <label>ratio height/width %
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>56.25</default>
                                <eval>required,float</eval>
                            </config>
                        </TCEforms>
                    </ratio>
                    <xs>
                        <TCEforms>
                           <displayCond>FIELD:height_mode:=:1</displayCond>
                            <label>Height in extra small screen (pixel)
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>400</default>
                                <eval>required,int</eval>
                            </config>
                        </TCEforms>
                    </xs>
                    <sm>
                        <TCEforms>
                           <displayCond>FIELD:height_mode:=:1</displayCond>
                            <label>Height in small screen (pixel)
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>400</default>
                                <eval>required,int</eval>
                            </config>
                        </TCEforms>
                    </sm>
                    <md>
                        <TCEforms>
                           <displayCond>FIELD:height_mode:=:1</displayCond>
                            <label>Height in medium screen (pixel)
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>600</default>
                                <eval>required,int</eval>
                            </config>
                        </TCEforms>
                    </md>
                    <lg>
                        <TCEforms>
                           <displayCond>FIELD:height_mode:=:1</displayCond>
                            <label>Height in large screen (pixel)
                            </label>
                            <config>
                                <type>input</type>
                                <size>8</size>
                                <default>600</default>
                                <eval>required,int</eval>
                            </config>
                        </TCEforms>
                    </lg>
                    <wrap>
                        <TCEforms>
                            <label>LLL:EXT:bootstrap_package/Resources/Private/Language/Backend.xlf:carousel.wrap</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:bootstrap_package/Resources/Private/Language/Backend.xlf:carousel.wrap.description</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </wrap>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
